<div class="container">
  <center>
    <h5 class="card-title" style="text-align: center;">
      Select device
    </h5>
    {{#each devices}}
      <div class="card" style="width: 25%;">
        <div class="card-body">
          <h5 class="card-title" id="current-moisture-level">
            {{this.name}}
          </h5>
          <a
            class="btn btn-primary"
            href="/dashboard/{{this.deviceId}}"
            role="button"
          >
            View
          </a>
          <a
            class="btn btn-secondary"
            href="/configure/{{this.deviceId}}"
            role="button"
          >
            <i class="bi bi-gear"></i>
          </a>
        </div>
      </div>
    {{/each}}
  </center>
</div>